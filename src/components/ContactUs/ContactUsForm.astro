---

const {
    FullName,
    Email,
    Phone,
    Message,
    sendmessageBtn,
} = Astro.props;
---

<div class="form-card">
    <!-- Add https://formsubmit.co/email-here later in the action -->
     <div class="form-p">
        <p>Input fields that are marked with * are required. </p>
     </div>
    <form
        action= "#"
        method="post"
        name="contactus"
    >
    <!-- Template types -->
    <input type="hidden" name="_template" value="table">
    <!-- <input type="hidden" name="_template" value="box"> -->
        <div>
            <label for={FullName}>{FullName} *</label>
            <input
                id={FullName}
                type="text"
                name="name"
                placeholder="Enter your full name here."
            />
           <p id="name_errormsg"></p>
        </div>
        <div>
            <label for="phone" class="label">{Phone} *</label>
            <input id="phone" type="tel" name="phone" placeholder="Enter your phone number here."/>
            <p id="phone_errormsg"></p>
        </div>
        <div>
            <label for={Email}>{Email}</label>
            <input
                id="email"
                name="email"
                placeholder="Enter your email address here."
            />
            <p id="email_errormsg"></p>
        </div>
        <div>
            <label for={Message}>{Message} *</label>
            <textarea
                id={Message}
                name="message"
                class="message-box"
                placeholder="Enter your message here."></textarea>
            <p id="message_errormsg"></p>
        </div>
        <input type="submit" value={sendmessageBtn} class="submit-btn" />
    </form>

</div>

<script>
    import {contactFormValidate} from "../../lib/formValidation";
    contactFormValidate();
</script>
