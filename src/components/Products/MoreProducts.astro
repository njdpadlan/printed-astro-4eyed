---
const {
    moreproductsHeader, 
    lasercutTitle, 
    lasercutImage,
    lasercutAltText,
    highqualitylaserTitle,
    lasercutText,
    partsText,
    featuresText,
    customsizesText,
    snapsetTitle,
    snapsetImage,
    snapsetAltText,
    durableTitle,
    multipartText,
    snapsetpartsText,
    commonuseText,
    fieldserviceText,
    continuousTitle,
    continuousImage,
    continuousAltText,
    reliableTitle,
    continuousText,
    continuouspartsText,
    idealforText,
    accountingText,
    customenvelopeTitle,
    customenvelopeImage,
    customenvelopeAltText,
    deliverbrandfirstTitle,
    daytodayText,
    regularText,
    availableoptionsText,
    regularwindowText
} = Astro.props;
---

<div>
    <h2>{moreproductsHeader}</h2>
    <section>
        <h3>{lasercutTitle}</h3>
        <img src={lasercutImage} alt={lasercutAltText}>
        <p>{highqualitylaserTitle}</p>
        <p>{lasercutText}</p>
        <p>{partsText}</p>
        <p>{featuresText}</p>
        <p>{customsizesText}</p>
    </section>
    <section>
        <h3>{snapsetTitle}</h3>
        <img src={snapsetImage} alt={snapsetAltText}>
        <p>{durableTitle}</p>
        <p>{multipartText}</p>
        <p>{snapsetpartsText}</p>
        <p>{commonuseText}</p>
        <p>{fieldserviceText}</p>
    </section>
    <section>
        <h3>{continuousTitle}</h3>
        <img src={continuousImage} alt={continuousAltText}>
        <p>{reliableTitle}</p>
        <p>{continuousText}</p>
        <p>{continuouspartsText}</p>
        <p>{idealforText}</p>
        <p>{accountingText}</p>
    </section>
    <section>
        <h3>{customenvelopeTitle}</h3>
        <img src={customenvelopeImage} alt={customenvelopeAltText}>
        <p>{deliverbrandfirstTitle}</p>
        <p>{daytodayText}</p>
        <p>{regularText}</p>
        <p>{availableoptionsText}</p>
        <p>{regularwindowText}</p>
    </section>
</div>