---
import { Image } from "astro:assets";
const {
    aboutHeader,
    aboutImage,
    aboutText,
    requestQuoteBtn,
    aboutAltText,
    contactUsBtn,
} = Astro.props;
---

<section class="about-section">
    <h2>{aboutHeader}</h2>
    <div class="about-info container">
        <div class="about-flex">
            <p>{aboutText}</p>
            <a href="/request-quote" class="about-request">{requestQuoteBtn}</a>
            <a href="/contact-us" class="about-contact">{contactUsBtn}</a>
        </div>
        <Image src={aboutImage} alt={aboutAltText} inferSize={true} />
    </div>
</section>
